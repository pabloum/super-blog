<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-3">

      <h1><%= title %></h1>

      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @post do |p|%>
        <div class="form-group">
          <%= p.text_field :title, placeholder: "Enter the title of the post", class: "form-control input-lg"%>
        </div>
        <div class="form-group">
          <%= p.text_area :body, placeholder: "Enter the body of the post", class: "form-control input-lg"%>
        </div>
        <div class="">
          <%= p.submit "Create post",class: "btn btn-danger btn-lg btn-block"%>
        </div>
      <% end %>

    </div>
  </div>
</div>
